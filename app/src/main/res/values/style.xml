<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textApp" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/general</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="movie_genre" parent = "textApp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#838391</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="movie_name" parent = "textApp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/general</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="H1" parent = "textApp">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">@dimen/poster_name_top</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="H1_poster" parent = "H1">
        <item name="android:textColor">@color/h5_poster</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="H2" parent = "textApp">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="H2_app" parent = "H2">
        <item name="android:layout_marginTop">@dimen/margin_app_top</item>
    </style>
    <style name="H2_film_info" parent = "H2">
        <item name="android:layout_marginTop">@dimen/film_page_margin_top_h2</item>
        <item name="android:layout_marginBottom">@dimen/film_page_margin_bottom_h2</item>
    </style>

    <style name="H3" parent = "textApp">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/margin_app_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_app_hor</item>
        <item name="android:layout_marginStart">@dimen/margin_app_hor</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="H3_description" parent="H3">
        <item name="android:maxLines">20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
    <style name="H3_short_description" parent="H3">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">5</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="H3_person_name" parent="H3">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/dp0</item>
        <item name="android:layout_marginStart">@dimen/person_name_margin_start</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="H4" parent = "textApp">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="H4_" parent = "H4">
        <item name="android:layout_marginTop">@dimen/margin_top_display</item>
        <item name="android:layout_marginStart">@dimen/card_people_name_marHor</item>
    </style>
    <style name="H4_home" parent = "H4">
        <item name="android:layout_marginStart">@dimen/margin_top_display</item>
    </style>
    <style name="H4_person" parent = "H4">
        <item name="android:layout_marginStart">@dimen/card_people_name_marHor</item>
    </style>
    <style name="H4_et" parent = "H4">
        <item name="android:textColor">@color/blue_arrow</item>
        <item name="android:gravity">end|top</item>
    </style>
    <style name="H4_viewer_serial" parent = "H4">
        <item name="android:textColor">@color/h5</item>
    </style>
    <style name="H4_viewer_serial_rec_episode" parent = "H4">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/viewer_season_header_top</item>
    </style>

    <style name="H5" parent = "textApp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/h5</item>
        <item name="android:layout_marginTop">@dimen/margin_app_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_app_hor</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="H5_actor" parent = "H5">
        <item name="android:layout_marginTop">@dimen/margin_top_display</item>
        <item name="android:layout_marginEnd">@dimen/margin_top_display</item>
    </style>
    <style name="H5_home" parent = "H5">
        <item name="android:layout_marginTop">@dimen/margin_top_h5_home</item>
        <item name="android:layout_marginEnd">@dimen/margin_top_display</item>
    </style>
    <style name="H5_poster" parent = "H5">
        <item name="android:layout_marginTop">@dimen/film_page_margin_top_h5</item>
        <item name="android:layout_marginEnd">@dimen/dp0</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="H5_toolbar" parent = "H5">
        <item name="android:layout_marginTop">@dimen/toolbar_margin_top</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/general</item>
    </style>
    <style name="H5_person_job" parent = "H5">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/person_job_margin_top</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="H5_description" parent = "H5">
        <item name="android:layout_marginTop">@dimen/viewer_season_recycler_data_top</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
    <style name="H5_filmography" parent = "textApp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/h5</item>
        <item name="android:layout_marginTop">@dimen/filmography_recycler_top</item>
    </style>

    <style name="H6" parent = "textApp">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/h5</item>
        <item name="android:layout_marginTop">@dimen/viewer_season_recycler_data_top</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="app_bold" parent = "textApp">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="app_normal" parent = "textApp">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="icon_rating" parent = "textApp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/ic_rating_text</item>
        <item name="android:textColorHint">@color/ic_rating_text</item>
        <item name="android:background">@drawable/card_film_rating_rectangle</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:hint">@string/icon_rating_hint</item>
    </style>
    <style name="cardViewMy" parent="textApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/fon_app</item>
        <item name="android:layout_marginTop">@dimen/film_page_margin_bottom_h2</item>
    </style>
    <style name="gallery_tabs_name" parent = "H2">
        <item name="android:textColor">@color/ic_rating_text</item>
        <item name="android:maxLength">15</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/gallery_tab_margin_hor</item>
        <item name="android:paddingVertical">8dp</item>
    </style>
    <style name="gallery_tabs_quantity" parent = "H4">
        <item name="android:textColor">@color/h5_poster</item>
        <item name="android:paddingStart">@dimen/gallery_tab_item_margin_hor</item>
        <item name="android:paddingEnd">@dimen/gallery_tab_margin_hor</item>
        <item name="android:paddingVertical">8dp</item>
    </style>
</resources>