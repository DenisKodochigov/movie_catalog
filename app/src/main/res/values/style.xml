<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textApp" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#CC303030</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="textApp.Small">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textApp.movie_genre">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#838391</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="textApp.movie_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="textApp.kit_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="textApp.show_all">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3D3BFF</item>
        <item name="android:gravity">end|top</item>
    </style>
    <style name="textApp.Big">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textApp.short_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/description_margin_hor</item>
        <item name="android:layout_marginEnd">@dimen/description_margin_hor</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="textApp.description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/description_margin_top</item>
        <item name="android:layout_marginStart">@dimen/description_margin_hor</item>
        <item name="android:layout_marginEnd">@dimen/description_margin_hor</item>
        <item name="android:maxLines">5</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textApp.Huge">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="textApp.poster_logo">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#B5B5C9</item>
        <item name="android:layout_marginTop">@dimen/poster_name_top</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="textApp.poster_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B5B5C9</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="textApp.starred">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/description_margin_top</item>
        <item name="android:layout_marginStart">@dimen/description_margin_hor</item>
    </style>
</resources>