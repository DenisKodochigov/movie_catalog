<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="0dp" android:height="50dp"  android:width="50dp" >
        <shape android:shape="oval">
            <solid android:color="#6BFFFFFF" />

        </shape>
    </item>
    <item
        android:end="@dimen/viewer_image_button_margin_end"
        android:top="@dimen/viewer_image_button_margin_ver"
        android:height="@dimen/viewer_image_button_length"
        android:width="1dp"
        android:gravity="top|end">
        <rotate
            android:fromDegrees="@dimen/viewer_image_button_corner_minus"
            android:toDegrees="@dimen/viewer_image_button_corner">
            <shape android:shape="rectangle">
                <solid android:color="@color/black"/>
                <corners
                    android:radius="1dp"
                    android:topRightRadius="0dp"
                    android:topLeftRadius="0dp"/>
            </shape>
        </rotate>
    </item>
    <item
        android:end="@dimen/viewer_image_button_margin_end"
        android:bottom="@dimen/viewer_image_button_margin_ver"
        android:height="@dimen/viewer_image_button_length"
        android:width="1dp"
        android:gravity="bottom|end">
        <rotate
            android:fromDegrees="@dimen/viewer_image_button_corner"
            android:toDegrees="@dimen/viewer_image_button_corner">
            <shape android:shape="rectangle">
                <solid android:color="@color/black"/>
                <corners
                    android:radius="1dp"
                    android:bottomRightRadius="0dp"
                    android:bottomLeftRadius="0dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>