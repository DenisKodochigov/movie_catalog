<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster_movie"
        android:layout_width="111dp"
        android:layout_height="156dp"
        app:layout_constraintCircleRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name_movie"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_movie"
        android:hint="@string/name_movie"
        style = "@style/textApp.movie_name"
        app:layout_constraintTop_toBottomOf="@id/poster_movie"
        app:layout_constraintStart_toStartOf="@id/poster_movie"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/genre_movie"
        android:hint="@string/genre_movie"
        style = "@style/textApp.movie_genre"
        app:layout_constraintTop_toBottomOf="@id/name_movie"
        app:layout_constraintStart_toStartOf="@id/poster_movie"
        />

</androidx.constraintlayout.widget.ConstraintLayout>