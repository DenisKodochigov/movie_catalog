<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.film_page.FilmPageFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/margin_app_hor"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/fragm_film_info_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/poster_big"
            layout="@layout/include_film_page_poster_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/description_film"
            style="@style/H3_description"/>
        <include
            android:id="@+id/serials"
            layout="@layout/include_film_page_serials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/person"
            layout="@layout/include_film_page_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/staff"
            layout="@layout/include_film_page_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/gallery"
            layout="@layout/include_film_page_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/similar"
            layout="@layout/include_film_page_similars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
