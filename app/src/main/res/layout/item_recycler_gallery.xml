<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_people_total_width"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_people_name_marTop">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_photo"
        android:layout_width="@dimen/card_gallery_width"
        android:layout_height="@dimen/card_gallery_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/card_people_radius">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/card_gallery_photo"
            android:background="@drawable/gradient_list"
            tools:ignore="ImageContrastCheck" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>