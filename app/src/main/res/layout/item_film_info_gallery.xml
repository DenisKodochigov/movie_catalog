<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_poster"
        android:focusable="true"
        app:cardElevation="0dp"
        android:layout_width="@dimen/card_gallery_icon_width"
        android:layout_height="@dimen/card_gallery_icon_height"
        android:layout_marginStart="@dimen/card_gallery_icon_marStart"
        app:cardCornerRadius="@dimen/card_gallery_icon_radius">
        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/poster_small"
            android:background="@drawable/gradient_list" />
    </androidx.cardview.widget.CardView>
</LinearLayout>