<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/poster_big"
            layout="@layout/include_poster_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/description_margin_top"/>

        <TextView android:id="@+id/short_description_film"
            style="@style/textApp.short_description"
            android:hint="@string/descriptions_film"/>
        <TextView android:id="@+id/description_film"
            style="@style/textApp.description"
            android:hint="@string/descriptions_film"/>

        <TextView android:id="@+id/starred"
            style="@style/textApp.starred"
            android:hint="@string/the_film_starred" />
    </LinearLayout>
</ScrollView>
