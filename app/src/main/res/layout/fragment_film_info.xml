<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.film_info.FilmInfoFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_top_display">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/poster_big"
            layout="@layout/include_poster_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_app_top"/>

        <TextView
            android:id="@+id/short_description_film"
            style="@style/H3_short_description"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/description_film"
            style="@style/H3_description"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />

        <include
            android:id="@+id/actors"
            layout="@layout/include_person_film_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_app_top"/>
        <include
            android:id="@+id/staff"
            layout="@layout/include_person_film_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_app_top"/>
    </LinearLayout>
</ScrollView>
